<a name="top"></a>
<div class="row">
    <div class="col-xs-3">
        <div class="panel panel-default">
            <div class="panel-body">
                <p>stats</p>
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-body">
                <p>trends</p>
            </div>
        </div>
    </div>
     <div class="col-xs-6">
    <%= render '/components/post_form' %> <br><br>
    
    <% for @p in @posts %>
        <div class="panel panel-default post-panel">
            <div class="panel-body row">
                <div class="col-sm-1">
                    <img src="/avatar.png" height="50px" width="50px" class="rounded-img"></img>
                </div>
                <div class="col-sm-11">
                    <p class="post-title"><span class="post-owner"><%= User.find(@p.user_id).username %></span> <span class="post-creation"> - <%= @p.created_at.to_formatted_s(:short) %></span></p>
                    <p class="post-content"><%= @p.content %></p>
                </div>
                <div class="col-sm-12 col-centered">
                    <p class="post-links">
                    <span class="glyphicon glyphicon-comment g-links" aria-hidden="true"></span>
                    <span class="glyphicon glyphicon-retweet g-links" aria-hidden="true"></span>
                    <span class="glyphicon glyphicon-heart g-links" aria-hidden="true"></span>
                    <span class="glyphicon glyphicon-option-horizontal g-links" aria-hidden="true"></span>
                    <a href="">View conversation</a>
                    </p>
                </div>
              
            </div>
        </div>
    <% end %>
    
     <div class="panel panel-default post-panel">
            <div class="panel-body row">
                <div class="col-sm-12">
                    <center><img src="/rt.png" height="25px" width="25px"></img></center>
                <center><a href="#top"><p class="opacity: .7; color: grey;">Go to Top <span class="glyphicon glyphicon-arrow-up" aria-hidden="true"></span></p></a></center>
                </div>
              
            </div>
        </div>
    </div>
    
     <div class="col-xs-3">
        <div class="panel panel-default">
            <div class="panel-body">
                <p style="opacity: 0.7;">Connect with your buddies. Chat With New Friends. Share your adventures.
                Just like a blog, but with less characters!</p>
            </div>
        </div>
    </div>   
</div>


